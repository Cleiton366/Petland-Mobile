<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/secondaryColor"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/request_list_user_photo"
                android:layout_width="82dp"
                android:layout_height="88dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/request_list_tittle"
                android:layout_width="133dp"
                android:layout_height="92dp"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/secondaryColor"
                android:orientation="vertical">

                    <Button
                        android:id="@+id/acceptBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/botton_accept"
                        android:text="@string/bottoAccept" />

                    <Button
                        android:id="@+id/rejectBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/botton_reject"
                        android:text="@string/bottonReject" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>